<div class="row" ng-controller="videoController">
    <div class="col-md-3">
        <div class="panel panel-warning text-center">
            <div class="panel-body">
                <h1 class="text-success">{{VideoJoinerInfos.TotalVideos}}</h1>
            </div>
            <div class="panel-footer panel-info">Total Videos</div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="panel panel-danger text-center">
            <div class="panel-body">
                <h1 class="text-info">{{VideoJoinerInfos.TotalUnhandledVideos}}</h1>
            </div>
            <div class="panel-footer panel-info">Total Unhandled Videos</div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="panel panel-success text-center">
            <div class="panel-body">
                <h1 class="text-warning">{{VideoJoinerInfos.TotalFailedVideos}}</h1>
            </div>
            <div class="panel-footer panel-info">Total Failed Videos</div>
        </div>
    </div>
    <div class="col-md-3">
      <div class="panel panel-info text-center">
        <div class="panel-body">
          <h1 class="text-danger">{{VideoJoinerInfos.TotalCompletedVideos}}</h1>
        </div>
        <div class="panel-footer panel-info">Total Completed Videos</div>
      </div>
    </div>
</div>
<div class="row" ng-controller="videoController">
  <div class="col-md-12">
    <div class="panel">
      <div class="panel-content">
        <div class="btn-group btn-group-justified">
          <a href="#" class="btn btn-primary col-sm-3" ng-click="startVideoJoiner()" ng-show="!running">
            <i class="glyphicon glyphicon-play"></i>
            <p>Start</p>
          </a>
          <a href="#" class="btn btn-primary col-sm-3" ng-click="stopVideoJoiner()" ng-show="running">
            <i class="glyphicon glyphicon-stop"></i>
            <p>Stop</p>
          </a>
        </div>
      </div><!--/panel content-->
    </div><!--/panel-->
    <div class="panel panel-default">
      <div class="panel-heading">Videos</div>
      <table class="table table-striped">
        <thead>
        <tr><th>Id</th><th>Title</th><th>Source Link</th><th>Reuploaded Link</th><th>Progress</th><th>Status</th><th>Note</th></tr>
        </thead>
        <tbody>
        <tr ng-repeat="video in VideoJoinerInfos.Videos"><td>{{video.Id}}</td><td>{{video.VideoTitle}}</td><td>{{video.SourceLink}}</td><td>{{video.ReuploadedLink}}</td><td>{{video.Progress}}</td><td>{{video.Status}}</td><td>{{video.Note}}</td></tr>
        </tbody>
      </table>
    </div><!--/panel-->
  </div>
</div>
