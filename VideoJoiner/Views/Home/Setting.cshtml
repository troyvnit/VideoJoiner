<div class="row" ng-controller="settingController">
    <div class="col-md-6">
      <div class="panel panel-default">
        <div class="panel-heading">
          <div class="panel-title">
            <i class="glyphicon glyphicon-chevron-up chevron"></i>
            <i class="glyphicon glyphicon-wrench pull-right"></i>
            Setting
          </div>
        </div>
        <div class="panel-body">
          <div class="form form-vertical">
            <div class="control-group" ng-repeat="setting in settings">
              <label>{{setting.SettingLabel}}</label>
              <div class="controls">
                <input type="text" class="form-control" ng-model="setting.SettingValue" placeholder="{{setting.SettingPlaceholder}}">
              </div>
            </div>
            <div class="control-group">
              <label>Intro {{introMessage}}</label>
              <div class="controls">
                <div ngf-drop ngf-select ng-model="intro" class="drop-box"
                     ngf-drag-over-class="'dragover'" ngf-multiple="false" ngf-allow-dir="true">Drop video file here or click to upload</div>
                <div ngf-no-file-drop>File Drag/Drop is not supported for this browser</div>
              </div>
            </div>
            <div class="control-group">
              <label>Outro {{outroMessage}}</label>
              <div class="controls">
                <div ngf-drop ngf-select ng-model="outro" class="drop-box"
                     ngf-drag-over-class="'dragover'" ngf-multiple="false" ngf-allow-dir="true">Drop video file here or click to upload</div>
                <div ngf-no-file-drop>File Drag/Drop is not supported for this browser</div>
              </div>
            </div>
            <div class="control-group">
              <label>Logo {{logoMessage}}</label>
              <div class="controls">
                <div ngf-drop ngf-select ng-model="logo" class="drop-box"
                     ngf-drag-over-class="'dragover'" ngf-multiple="false" ngf-allow-dir="true">Drop video file here or click to upload</div>
                <div ngf-no-file-drop>File Drag/Drop is not supported for this browser</div>
              </div>
            </div>
            <div class="control-group">
              <label>Import Video Links {{importMessage}}</label>
              <div class="controls">
                <div ngf-drop ngf-select ng-model="import" class="drop-box"
                     ngf-drag-over-class="'dragover'" ngf-multiple="false" ngf-allow-dir="true">Drop video links file here or click to upload</div>
                <div ngf-no-file-drop>File Drag/Drop is not supported for this browser</div>
              </div>
            </div>
            <div class="control-group">
              <label></label>
              <div class="controls">
                <button type="button" class="btn btn-primary" ng-click="saveSettings()">
                  Save
                </button>
              </div>
            </div>
          </div>

        </div><!--/panel content-->
      </div><!--/panel-->
    </div>
    <div class="col-md-6">
        
    </div>
</div>
